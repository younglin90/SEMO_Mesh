#%Module

proc ModulesHelp { } {
    puts stderr "This module sets the path and environment variables for petsc-3.14.3"
    puts stderr "     see https://www.mcs.anl.gov/petsc/ for more information      "
    puts stderr ""
}
module-whatis "PETSc - Portable, Extensible Toolkit for Scientific Computation"

set petsc_dir   "/home/yyl/petsc"
set petsc_arch  "arch-linux-c-debug"

setenv PETSC_ARCH "$petsc_arch"
setenv PETSC_DIR "$petsc_dir"
prepend-path PATH "/home/yyl/petsc/arch-linux-c-debug/bin:/home/yyl/petsc/bin"
